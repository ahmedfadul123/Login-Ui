<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:width="2dp"
                android:color="@color/colorPrimary2"/>
            <corners android:radius="4dp"/>

            <gradient android:angle="90"
                android:startColor="@color/colorPrimaryDark2"
                android:endColor="@color/colorPrimaryDark2"/>


        </shape>
    </item>


    <item>
        <shape >

            <stroke android:width="1dp"
                android:color="@color/gradient_level_2"/>

            <gradient
                android:angle="90"
                android:startColor="@color/gradient_level_1"
                android:centerColor="@color/gradient_level_2"
                android:endColor="@color/gradient_level_3"/>
            <corners
                android:radius="4dp" />


        </shape>
    </item>

</selector>


